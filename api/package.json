{
  "name": "restaurant-api",
  "version": "1.0.0",
  "description": "API principal para el sistema de restaurantes",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "test:unit": "vitest run --dir src/tests/unit",
    "test:integration": "vitest run --dir src/tests/integration",
    "test": "vitest run"
  },
  "keywords": [
    "restaurant",
    "api",
    "mongodb",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "mongoose": "^7.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  }
}
